<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rajramchandani.eggtimer.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/controltimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:background="@android:color/background_dark"
            android:onClick="controltimer"
            android:text="GO!"
            android:textColor="@android:color/background_light"
            tools:layout_height="30dp"
            tools:layout_width="100dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/nisharaj" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            tools:layout_height="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/controltimer"
            android:layout_alignLeft="@+id/controltimer"
            android:layout_alignStart="@+id/controltimer"
            android:layout_marginBottom="78dp"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="30sp"
            tools:layout_height="50dp"
            tools:layout_width="120dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
